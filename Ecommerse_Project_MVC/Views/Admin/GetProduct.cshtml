@model ProductDetailsVM

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">Update Product</h4>
                    <form asp-action="UpdateProduct" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label class="form-label">Product Name</label>
                            <input asp-for="Name" class="form-control" required />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">SubCategoryId</label>
                                <input name="SubCategoryId" class="form-control" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">MainCategoryId</label>
                                <input name="MainCategoryId" class="form-control" required />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Price</label>
                                <input asp-for="Price" class="form-control" step="0.01" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Stock</label>
                                <input asp-for="Stock" class="form-control" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Brand</label>
                            <input asp-for="Brand" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Color</label>
                            <input asp-for="Color" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Material</label>
                            <input asp-for="Material" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Size</label>
                            <input asp-for="Size" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Target Audience</label>
                            <select name="TargetAudience" class="form-control" asp-items="Html.GetEnumSelectList<TargetAudience>()">
                                <option value="">-- Select Target Audience --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        </div>

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">
                                @TempData["ErrorMessage"]
                            </div>
                        }

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Update Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
