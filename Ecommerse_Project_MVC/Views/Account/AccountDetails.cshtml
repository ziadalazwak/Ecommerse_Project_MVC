@model AccountDetailsVM
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .address-card {
            max-width: 300px;
            margin: 10px;
        }

            .address-card .card-body {
                padding: 1rem;
            }

            .address-card .card-title {
                font-size: 1rem;
                margin-bottom: 0.5rem;
            }

            .address-card .address-details {
                font-size: 0.9rem;
                color: #6c757d;
            }
    </style>


    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .main-content {
            margin-top: 200px;
            margin-bottom: 40px;
        }
    </style>
</head>
<body>
    <div class="main-content">
        <div class="container">
            <div class="row">
                <!-- Sidebar Navigation -->
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="text-center mb-4">
                                <h5 class="mt-3">@Model.Name</h5>
                                <p class="text-muted">Premium Member</p>
                            </div>
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link active" href="#profile">
                                        <i class="fas fa-user me-2"></i> Profile
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#orders">
                                        <i class="fas fa-shopping-bag me-2"></i> Orders
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#settings">
                                        <i class="fas fa-cog me-2"></i> Settings
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-md-9">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title mb-4">Profile Information</h4>

                            <form asp-action="UpdateAccountDetails" id="profileForm" method="post">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label  class="form-label">First Name</label>
                                        <input type="text" name="FirstName" class="form-control" value="@Model.FirstName" disabled>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Last Name</label>
                                        <input type="text" name="LastName" class="form-control" value="@Model.LastName" disabled>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" name="Email" class="form-control" value="@Model.Email" disabled>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Phone</label>
                                    <input type="tel" name="Phone" class="form-control" value="@Model.phone" disabled>
                                </div>
                                @if (TempData["message"] != null)
                                {
                                    <div class="alert alert-danger">
                                        @TempData["message"]
                                    </div>
                                }

                                <div class="d-flex justify-content-between align-items-center">
                                    <button type="button" class="btn btn-primary" id="editSaveBtn" onclick="toggleFormEdit()">Edit</button>
                                    <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                                        <i class="fas fa-key me-2"></i>Change Password
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                    @foreach (var address in Model.Address)
                    {
                        <div class="container py-5 address-left-top">
                            <div class="row">
                                <div class="col-md-7 col-lg-5">
                                    <div class="card address-card shadow-lg border-0">
                                        <div class="card-body p-4">
                                            <h5 class="card-title mb-4 text-center fw-bold">Home Address</h5>
                                            <form class="addressForm" autocomplete="off">
                                                <div class="mb-3">
                                                    <label class="form-label">State</label>
                                                    <input type="text" class="form-control" value="@address.State" disabled>
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">Street</label>
                                                    <input type="text" class="form-control" value="@address.Street" disabled>
                                                </div>
                                                <div class="row mb-3">
                                                    <div class="col-md-6 mb-2 mb-md-0">
                                                        <label class="form-label">City</label>
                                                        <input type="text" class="form-control" value="@address.City" disabled>
                                                    </div>
                                                </div>
                                                <button type="button" class="btn btn-primary w-100 fw-bold py-2 editSaveBtn" onclick="toggleAddressEdit(this)">Edit</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Recent Orders -->
                    <div class="card mt-4">
                        <div class="card-body">
                            <h4 class="card-title mb-4">Recent Orders</h4>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Order #</th>
                                            <th>Date</th>
                                            <th>Items</th>
                                            <th>Total</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>#12345</td>
                                            <td>2024-03-15</td>
                                            <td>2x Espresso, 1x Cappuccino</td>
                                            <td>$15.50</td>
                                            <td><span class="badge bg-success">Completed</span></td>
                                        </tr>
                                        <tr>
                                            <td>#12344</td>
                                            <td>2024-03-14</td>
                                            <td>1x Latte, 1x Muffin</td>
                                            <td>$12.75</td>
                                            <td><span class="badge bg-success">Completed</span></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Change Password Modal -->
    <div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="changePasswordModalLabel">Change Password</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form asp-action="ChangePassword" method="post">
                        <div class="mb-3">
                            <label class="form-label">Current Password</label>
                            <input type="password" name="OldPassword" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">New Password</label>
                            <input type="password" name="NewPassword" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Confirm New Password</label>
                            <input type="password"  class="form-control" required>
						</div> 
                        <div class="modal-footer">
							<button type="reset" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
							<button type="submit" class="btn btn-primary">Update Password</button>
						</div>
                    </form>
                </div>
            
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleFormEdit() {
            const form = document.getElementById('profileForm');
            const inputs = form.querySelectorAll('input');
            const btn = document.getElementById('editSaveBtn');
            const isDisabled = inputs[0].disabled;

            if (isDisabled) {
                // Enable inputs for editing
                inputs.forEach(input => input.disabled = false);
                btn.textContent = 'Save';
            } else {
                // Submit the form
                form.submit();
            }
        }
    </script>


    <script>
        function toggleAddressEdit(btn) {
            const form = btn.closest('.addressForm');
            const inputs = form.querySelectorAll('input, select');
            const isDisabled = inputs[0].disabled;
            inputs.forEach(input => input.disabled = !isDisabled);
            btn.textContent = isDisabled ? 'Save' : 'Edit';
        }
    </script>

    <style>
        body {
            background: linear-gradient(135deg, #f8fafc 0%, #e0e7ef 100%);
            font-family: 'Segoe UI', Arial, sans-serif;
        }

        .address-card {
            border-radius: 1.25rem;
            background: #fff;
            box-shadow: 0 4px 24px rgba(0,0,0,0.08);
        }

        .card-title {
            letter-spacing: 1px;
            color: #3b3b3b;
        }

        .form-label {
            font-weight: 500;
            color: #495057;
        }

        .form-control, .form-select {
            border-radius: 0.5rem;
            font-size: 1rem;
        }

        #editSaveBtn {
            margin-top: 0.8rem;
            font-weight: 600;
            letter-spacing: 1px;
            font-size: 1.1rem;
            box-shadow: 0 2px 8px rgba(0,123,255,0.08);
        }
    </style>

    <style>
        .address-left-top {
            margin-top: -1rem !important;
            margin-left: 0 !important;
            display: block;
        }
    </style>
</body>
</html> 