                    <div class="zoom_gallery_inner d-flex">
                        <!-- Dynamic Thumbnails -->
                        <div class="zoom_tab_img">
                            @{
                                var apiBaseUrl = " https://localhost:7019";
                            }

                            @if (Model.Images != null && Model.Images.Any())
                            {
                                foreach (var image in Model.Images)
                                {
                                    <a class="zoom_tabimg_list" href="javascript:void(0)">
                                        <img src="@($"{apiBaseUrl}{image.ImageUrl}")" alt="Thumbnail" />
                                    </a>
                                }
                            }
                            else
                            {
                                <a class="zoom_tabimg_list" href="javascript:void(0)">
                                    <img src="@($"{apiBaseUrl}/assets/img/product/default.jpg")" alt="Default Thumbnail" />
                                </a>
                            }
                        </div>

                        <!-- Main Zoom Images -->
                        <div class="product_zoom_main_img">
                            @if (Model.Images != null && Model.Images.Any())
                            {
                                foreach (var image in Model.Images)
                                {
                                    <div class="product_zoom_thumb">
                                        <img src="@($"{apiBaseUrl}{image.ImageUrl}")" alt="Product Image" />
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="product_zoom_thumb">
                                    <img src="@($"{apiBaseUrl}/assets/img/product/default.jpg")" alt="Default Product Image" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-6">
                <div class="product_d_right">
                        <h1>@Model.Name</h1>
                        <div class="product_ratting_review d-flex align-items-center">
                            <!-- Rating stars -->
                        </div>
                        <div class="price_box">
                            <span  class="current_price">$@Model.Price</span> <!-- Fixed price reference -->
                        </div>
                        <div class="product_availalbe">
                            <ul class="d-flex">
                                <li><i class="icon-layers icons"></i> Only <span>@Model.Stock</span> left </li>
                                <li>Availalbe: <span class="stock">In Stock</span></li>
                            </ul>
                        </div>
                        <div class="product_desc">
                            <p>@Model.Description</p>
                        </div>
                        <div class="product_variant">
                            <!-- Color selection -->
                            @{
                                var colors = Model.Color.Split(' '); // Example: "black yellow gray not.gray purble"
                            }

                            <div class="filter__list widget_color d-flex align-items-center">
                                <h3>Select color</h3>
                                <ul>
                                    @foreach (var ch in colors)
                                    {
                                        // Escape the dot in class names like "not.gray"
                                        var safeClass = ch.Replace(".", "\\.");
                                        <li>
                                            <input name="Color" type="checkbox" value="@ch" />
                                            <span class="checkmark @ch"></span> <!-- Applies the class directly -->
                                        </li>
                                    }
                                </ul>
                            </div>
                            <!-- Size selection -->
                            @{
                                var sizes = Model.Size.Split(' '); // Example: "S M L XL XLL"
                            }

                            <div class="filter__list widget_size d-flex align-items-center">
                                <h3>Select size</h3>
                                <ul>
                                    @foreach (var size in sizes)
                                    {
                                        <li><a name="Size" href="javascript:void(0)">@size</a></li>
                                    }
                                </ul>
                            </div>

                            <div class="variant_quantity_btn d-flex">
                                <div class="pro-qty border">
                                    <input min="1" max="@Model.Stock" type="text" name="quantity">
                            </div>
                            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                <button class="button btn btn-primary" type="submit"><i class="ion-android-add"></i> Add To Cart</button>
                                @{
                                    var imageUrlfirst = Model.Images != null && Model.Images.Any()
                                    ? apiBaseUrl + Model.Images.First().ImageUrl
                                    : apiBaseUrl + "/assets/img/product/default.jpg";
                                }
                                <input type="text" name="ImageUrl" value="@imageUrlfirst" hidden />
                                <input type="text" name="ProductName" value="@Model.Name" hidden />
                                <input type="number" name="Price" value="@Model.Price" hidden />


                                <input type="number" name="ProductId" value="@Model.Id" hidden />
                                <input type="number" name="Id" value="@Model.Id" hidden />
                    </form>
                                <a class="wishlist" href="#"><i class="ion-ios-heart"></i></a>
                            </div>
                        </div>
                        <div class="product_sku">
                            <p><span>SKU: </span> #ABC123456</p>
                        </div>
                        <div class="product_tags d-flex">
                            <span>tags: </span>
                            <ul class="d-flex">
                                <li><a href="#">fashion,</a></li>
                                <li><a href="#">clothings,</a></li>
                                <li><a href="#">accessorires</a></li>
                            </ul>
                        </div>
                        <div class="priduct_social d-flex">
                            <span>SHARE: </span>
                            <ul>
